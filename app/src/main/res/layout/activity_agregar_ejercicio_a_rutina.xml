<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarEjercicioARutina">

    <Spinner
        android:id="@+id/spn_agregarEjercicioARutina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        tools:layout_editor_absoluteX="16dp"
        android:scrollbarSize="18dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:hint="Series"
        app:errorEnabled="true"
        app:helperText="Numero de series"
        app:helperTextEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.156"
        app:startIconDrawable="@drawable/ic_baseline_home_repair_service_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itxt_agregarEjercicioARutina_series"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:hint="Series"
        app:errorEnabled="true"
        app:helperText="Numero de repeticiones por cada serie"
        app:helperTextEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33"
        app:startIconDrawable="@drawable/ic_baseline_repeat_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itxt_agregarEjercicioARutina_repeticiones"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

