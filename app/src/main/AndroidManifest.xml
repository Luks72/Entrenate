<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.ubb.entrenate">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Entrenate">
        <activity android:name=".AgregarRutinaActual"></activity>
        <activity android:name=".AgregarPerfil" />
        <activity android:name=".EditarRutina" />
        <activity android:name=".ListadoEjercicios" />
        <activity android:name=".AgregarRutinaActivity" />
        <activity android:name=".DetalleRutina" />
        <activity android:name=".AgregarUsuario">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.Entrenate.NoActionBar" />
        <activity android:name=".DetalleEjercicio" />
        <activity android:name=".ClasificacionActivity" />
        <activity android:name=".AgregarEjerciciosActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>